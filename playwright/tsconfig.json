{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist",
    "noEmit": false,
    "noUnusedLocals": false,
    "types": ["node", "playwright-core"]
  },
  "include": ["./**/*.ts"]
} 